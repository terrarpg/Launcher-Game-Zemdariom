{
  "name": "Zendariom",
  "productName": "Zendariom Launcher",
  "version": "1.0.5",
  "description": "Launcher Minecraft pour le serveur Selvania",
  "main": "src/app.js",
  "author": "WW_DJY",
  "scripts": {
    "start": "electron .",
    "build": "node build.js --obf=true --build=platform"
  },
  "dependencies": {
    "electron-updater": "^6.1.8",
    "minecraft-java-core": "^4.1.4",
    "node-bdd": "^2.0.4",
    "node-fetch": "^2.7.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^26.0.12",
    "javascript-obfuscator": "^4.1.0",
    "jimp": "^0.22.12",
    "png2icons": "^2.0.1"
  },
  "build": {
    "appId": "com.zendariom.launcher",
    "publish": [
      {
        "provider": "github",
        "owner": "terrarpg",
        "repo": "Launcher-Game-Zemdariom"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/images/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "createDesktopShortcut": true
    },
    "directories": {
      "output": "dist"
    }
  }
}
